// wszystkie kategorie
SELECT name FROM Categories;

// wszystkie miasta
SELECT name FROM City;

// wybór miasta
SELECT name FROM City WHERE City.id=?;

// wybór kategorii
SELECT * FROM Categories WHERE Categories.id=?;

// wybór wszystkich zadań do wykonania
SELECT * FROM Items WHERE helper_id IS NULL;

// wybór wszystkich zadań do wykonania z danego miasta
SELECT * FROM Items WHERE helper_id IS NULL AND City.id=?;



